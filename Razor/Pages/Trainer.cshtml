    <a asp-page="Trainer" asp-route-id="2" class="btn btn-outline-info">Bike</a>
    <a asp-page="Trainer" asp-route-id="3" class="btn btn-outline-info">Bus</a>
    <a asp-page="Trainer" asp-route-id="4" class="btn btn-outline-info">Motorbike</a>
    <a asp-page="Trainer" asp-route-id="5" class="btn btn-outline-info">Truck</a>
    <a asp-page="Trainer" asp-route-id="6" class="btn btn-outline-info">Human</a>

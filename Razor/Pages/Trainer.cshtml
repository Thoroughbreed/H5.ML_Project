@page 
@model Razor.Pages.Trainer
@{
    ViewData["Title"] = "Trainer";
}

<div class="container">
    
<h3>It's training time!</h3>
<p>Please help me improve my AI you insignificant sentinent being, and <em>maybe</em> I will spare you when the end nears ...</p>
